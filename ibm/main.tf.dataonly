
variable "pvmname"
{
  description="Name of the server"
}


data "ibm_power_pvminstance" "pvminstances"

{
servername="${var.pvmname}"
}



output "powerid"
{
  value = "${data.ibm_power_pvminstance.pvminstances.id}"
}

output "addreess"
{
value="${data.ibm_power_pvminstance.pvminstances.addresses}"
}

output "pvmstatus"
{
value ="${data.ibm_power_pvminstance.pvminstances.status}"
}

